{
  "name": "saneyar-backend",
  "version": "1.0.0",
  "description": "Mental health support platform backend with crisis detection and AI chatbot",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='**/*.js' --coverageDirectory=coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "docker:build": "docker build -t saneyar-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env saneyar-backend",
    "prepare": "husky install",
    "setup": "./setup.sh",
    "health-check": "node health-check.js",
    "health": "node health-check.js",
    "quick-start": "./setup.sh && npm run health-check"
  },
  "keywords": [
    "mental-health",
    "crisis-detection",
    "ai-chatbot",
    "peer-support",
    "counseling",
    "express",
    "socket.io",
    "mongodb"
  ],
  "author": "Saneyar Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "morgan": "^1.10.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.2",
    "agenda": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@types/jest": "^29.5.5",
    "mongodb-memory-server": "^8.15.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/saneyar-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/saneyar-backend/issues"
  },
  "homepage": "https://github.com/yourusername/saneyar-backend#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}